UPDATE CARD_PROD_VER cpv
SET
    CUST_FACE_PROD_NM = cp.CUST_FACE_PROD_NM,
    CUST_FACE_PROD_SHRT_NM = cp.CUST_FACE_PROD_SHRT_NM,
    CUST_FACE_ADA_PROD_NM = cp.CUST_FACE_ADA_PROD_NM,
    CUST_FACE_DGWT_PROD_NM = cp.CUST_FACE_DGWT_PROD_NM,
    MKT_PROD_CD = cp.MKT_PROD_CD,
    CARD_PROD_CMPLMT_BNFT_SET_ID = cp.CARD_PROD_CMPLMT_BNFT_SET_ID,
    CARD_PROD_CMPLMT_BNFT_SET_CNFG_ID = cp.CARD_PROD_CMPLMT_BNFT_SET_CNFG_ID
FROM CARD_PROD cp
WHERE cpv.CARD_PROD_ID = cp.CARD_PROD_ID;



UPDATE CARD_PROD_VER
SET
    CUST_FACE_PROD_NM = NULL,
    CUST_FACE_PROD_SHRT_NM = NULL,
    CUST_FACE_ADA_PROD_NM = NULL,
    CUST_FACE_DGWT_PROD_NM = NULL,
    MKT_PROD_CD = NULL,
    CARD_PROD_CMPLMT_BNFT_SET_ID = NULL,
    CARD_PROD_CMPLMT_BNFT_SET_CNFG_ID = NULL;
